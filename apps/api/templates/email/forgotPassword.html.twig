{% extends 'email/layout.html.twig' %}

{% block body %}
    {% apply inky_to_html|inline_css(source('@styles/foundation-emails.css')) %}
        <container>
            <spacer size="30"></spacer>
            <row>
                <columns>
                    <h1 style="color: #b76729" class="text-center">Vous avez demandé à réinitialiser votre mot de passe</h1>
                    <spacer size="20"></spacer>
                    <p class="text-center">Cliquez sur ce lien pour réinitialiser votre mot de passe : </p>
                    <spacer size="20"></spacer>
                    <center>
                        <button href="{{ frontUrl ~ '/reset-password/' ~ token }}" class="app-btn">
                            Réinitialiser mon mot de passe
                        </button>
                    </center>
                    <spacer size="30"></spacer>
                    <p class="text-center">Si vous n'avez pas demandé à changer votre mot de passe, merci d'ignorer cet email</p>
                </columns>
            </row>
            <spacer size="20"></spacer>
        </container>
    {% endapply %}
{% endblock %}
