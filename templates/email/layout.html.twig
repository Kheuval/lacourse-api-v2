{% block header %}
    {% apply inky_to_html|inline_css(source('@styles/foundation-emails.css')) %}
        <spacer size="30"></spacer>
        <container class="header">
            <spacer size="30"></spacer>
            <row>
                <columns>
                    <center>
                        <a href="{{ frontUrl }}">
                            <center>
                                <img src="{{ absolute_url(asset('media/logo.svg')) }}" alt="La Course" width="100" height="100" />
                            </center>
                        </a>
                    </center>
                </columns>
            </row>
            <spacer size="20"></spacer>
        </container>
    {% endapply %}
{% endblock header %}

{% block body %}
{% endblock body %}

{% block footer %}
    {% apply inky_to_html|inline_css(source('@styles/foundation-emails.css')) %}
        <container class="footer">
            <spacer size="20"></spacer>
            <row>
                <p class="text-center small"><a href="{{ frontUrl }}">La Course</a></p>
            </row>
        </container>
    {% endapply %}
{% endblock footer %}
